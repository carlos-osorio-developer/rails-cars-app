<% if notice %>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<% end if %>

<h1><%= t('cars.title') %></h1>
<div class="modal fade exampleModal" id="exampleModal" tabindex="-1" aria-labelledby="exampleModal" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><%= t('cars.rent') %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div id="current_car">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<div class="d-flex wrap justify-content-around my-4">      
  <% @cars.each do |car| %>
    <div class="card" style="width: 18rem;">
      <img src=<%=car.image_url%> class="card-img-top" alt="...">
      <div class="d-flex flex-column card-body">
        <h5 class="card-title"><%=car.name%></h5>
        <p class="card-text"><%=car.description%></p>
        <div class="d-flex justify-content-between">
          <p class="card-text"><span class="fw-bold">Modelo: </span><%=car.model%></p>          
          <p class="card-text"><span class="fw-bold">Precio: </span><%=car.hourly_rate%></p>
        </div>      
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
          <%= link_to t('cars.select'), car, class: "btn btn-primary w-100 h-100", remote: true %>
        </button>        
      </div>
    </div>                    
  <% end %>
</div> 

<br>

<%= link_to 'New Car', new_car_path %>
