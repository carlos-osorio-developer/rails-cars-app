<div id="welcome-box">
  <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: inherit;">
    <div class="img-fluid card bg-secondary p-2 mb-4" style="--bs-bg-opacity: .5;">
      <img src="https://i.ibb.co/Rb6zT01/logo-Fletx.png" alt="Logo" id="welcome-img" class="img-fluid p-2 mb-4" />
    </div>
    <h1 class="card bg-secondary p-2" style="--bs-bg-opacity: .7;"><%= t('main.welcome_msg') %></h1>
    <div class="mt-4 d-flex justify-content-center">    
      <div class="card text-white bg-primary m-3" style="max-width: 18rem; --bs-bg-opacity: .7;">
        <div class="card-header"><%= t('cars.offer') %></div>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= t('cars.offer_title') %></h5>
          <p class="card-text"><%= t('cars.offer_description') %></p>
          <%= link_to t('cars.offer_action'), new_car_path, class: 'btn btn-light align-self-center' %>
        </div>
      </div>
      <div class="card text-white bg-success m-3" style="max-width: 18rem; --bs-bg-opacity: .7;">
        <div class="card-header"><%= t('cars.rent') %></div>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= t('cars.rent_title') %></h5>
          <p class="card-text"><%= t('cars.rent_description') %></p>
          <%= link_to t('cars.rent_action'), cars_path, class: 'btn btn-light align-self-center' %>
        </div>
      </div>
    </div>
  </div>
</div>
