<div class="modal fade" id="reservation-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with(model: @booking, local: true) do |f| %>
          <%= f.label :hours %>
          <%= f.number_field :hours, min: 3, max: 36, value: 3 %>
          
          <%= hidden_field_tag 'selected', 'none'  %>
          
          <%= f.submit 'Reservar' %>
        <% end %>  
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>