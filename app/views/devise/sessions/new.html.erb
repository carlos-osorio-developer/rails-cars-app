<h2 class="ms-4"><%= t('users.login') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'm-4 w-25'}) do |f| %>
  <div class="field">
    <%= f.label t('users.email'), class: 'form-label fs-6' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label t('users.password'), class: 'form-label fs-6' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: 'form-check-input' %>
      <%= f.label t('users.remember_me'), class: 'form-check-label fs-6 d-inline' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('users.log_action'), class: 'btn btn-primary mt-3' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>